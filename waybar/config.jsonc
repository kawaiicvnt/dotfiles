// -*- mode: jsonc -*-
{
    "layer": "bottom", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    "margin-right": 5,
    "margin-left": 5,
    //"width": 2380, // Gaps between the edges (4px) 
    // Choose the order of the modules
    "modules-left": [
        "clock",
        "battery",
        "idle_inhibitor",
        "sway/workspaces",
        "sway/scratchpad",
	"hyprland/workspaces",
	"hyprland/scratchpad",
	"custom/rot-0",
	"custom/rot-180"
    ],
    "modules-center": [
        "sway/window",
	"hyprland/window"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
	"bluetooth",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "sway/language",
        "tray"
    ],
